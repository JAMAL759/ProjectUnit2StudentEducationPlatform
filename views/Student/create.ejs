<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1> This is the Student make page</h1>

    <form action="/student" method="post">
        <label for="name"> Name: </label>
        <input name="name" id="name" type="text">

        <label for="userName"> userName: </label>
        <input name="userName" id="userName" type="text" >

        <label for="collage"> </label>
        <select   name="collage" id="collage" >
            
            <% allCollages.forEach( (obj)=> { %>

                <option value="<%= obj.id %>"> <%= obj.name %></option>
           
                    <% }) %>
        </select>

        <label for="doctor"> doctor: </label>
        <select multiple name="doctor" id="doctor"> 
            <% allInstructor.forEach( (obj)=> { %>
            <option value="<%= obj.id %>"> <%= obj.name %></option>
                <% }) %>
        </select>

       
        <% allUsers.forEach( (obj) => { if (id == obj.username) { %>
        <input name="user" id="user" type="text" value= <%= obj.id %> hidden >
            <% } }) %>

        <label for="course"> Choose your courses: </label>
        <select name="course" id="course" multiple> 
            <% allCourses.forEach( (obj)=> { %>
            <option value="<%= obj.id %>"> <%= obj.name %></option>
                <% }) %>
        </select>

        <button> Submit</button>

    </form>

    
</body>
</html>

